{
  "name": "node-red-contrib-homekit-bridged",
  "version": "1.6.0-dev.0",
  "description": "Node-RED nodes to simulate Apple HomeKit devices.",
  "main": "build/nodes/nrchkb.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf build/lib build/**/*.js",
    "test": "mocha -r ts-node/register './src/**/*.test.[tj]s' --exit --timeout 30000",
    "prettier": "prettier --write \"**/*.{js,ts}\"",
    "eslint": "eslint \"src/**/*.ts\"",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NRCHKB/node-red-contrib-homekit-bridged"
  },
  "keywords": [
    "homekit",
    "node-red",
    "NRCHKB",
    "iot",
    "home",
    "hap-nodejs",
    "homebridge"
  ],
  "node-red": {
    "nodes": {
      "nrchkb": "build/nodes/nrchkb.js",
      "bridge": "build/nodes/bridge.js",
      "standalone": "build/nodes/standalone.js",
      "service": "build/nodes/service.js",
      "service2": "build/nodes/service2.js",
      "status": "build/nodes/status.js"
    },
    "version": ">=1.3.7"
  },
  "author": {
    "name": "Tadeusz Wyrzykowski",
    "email": "shaquu@icloud.com",
    "url": "https://github.com/Shaquu"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/NRCHKB/node-red-contrib-homekit-bridged/issues"
  },
  "homepage": "https://github.com/NRCHKB/node-red-contrib-homekit-bridged#readme",
  "dependencies": {
    "@nrchkb/logger": "^2.0.0",
    "hap-nodejs": "0.11.1",
    "node-persist": "^3.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "semver": "^7.5.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@homebridge/ciao": "^1.1.7",
    "@node-red/registry": "^2.2.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "^10.17.60",
    "@types/node-persist": "^3.1.3",
    "@types/node-red": "^1.3.1",
    "@types/node-red-node-test-helper": "^0.3.0",
    "@types/semver": "^7.5.0",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "node-red": "^2.2.3",
    "node-red-node-test-helper": "^0.3.2",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=10.22.1"
  },
  "files": [
    "/build",
    "/examples"
  ]
}
