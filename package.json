{
  "name": "node-red-contrib-homekit-bridged",
  "version": "1.5.0",
  "description": "Node-RED nodes to simulate Apple HomeKit devices.",
  "main": "build/nodes/nrchkb.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf build/lib build/**/*.js",
    "test": "mocha -r ts-node/register './src/**/*.test.[tj]s' --exit --timeout 30000",
    "prettier": "prettier --write \"**/*.{js,ts}\"",
    "eslint": "eslint \"src/**/*.ts\"",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NRCHKB/node-red-contrib-homekit-bridged"
  },
  "keywords": [
    "homekit",
    "node-red",
    "NRCHKB",
    "iot",
    "home",
    "hap-nodejs",
    "homebridge"
  ],
  "node-red": {
    "nodes": {
      "nrchkb": "build/nodes/nrchkb.js",
      "bridge": "build/nodes/bridge.js",
      "standalone": "build/nodes/standalone.js",
      "service": "build/nodes/service.js",
      "service2": "build/nodes/service2.js",
      "status": "build/nodes/status.js"
    },
    "version": ">=1.3.7"
  },
  "author": {
    "name": "Tadeusz Wyrzykowski",
    "email": "shaquu@icloud.com",
    "url": "https://github.com/Shaquu"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/NRCHKB/node-red-contrib-homekit-bridged/issues"
  },
  "homepage": "https://github.com/NRCHKB/node-red-contrib-homekit-bridged#readme",
  "dependencies": {
    "@nrchkb/logger": "^1.3.3",
    "hap-nodejs": "0.11.0",
    "node-persist": "^3.1.0",
    "semver": "^7.5.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@homebridge/ciao": "^1.1.5",
    "@node-red/registry": "^2.2.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "^10.17.60",
    "@types/node-persist": "^3.1.3",
    "@types/node-red": "^1.2.1",
    "@types/node-red-node-test-helper": "^0.2.2",
    "@types/semver": "^7.3.13",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.2",
    "mocha": "^10.1.0",
    "node-red": "^2.2.3",
    "node-red-node-test-helper": "^0.3.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "engines": {
    "node": ">=10.22.1"
  },
  "files": [
    "/build",
    "/examples"
  ]
}
