{
  "name": "node-red-contrib-homekit-bridged",
  "version": "1.5.0-dev.4",
  "description": "Node-RED nodes to simulate Apple HomeKit devices.",
  "main": "build/nodes/nrchkb.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf build/lib build/**/*.js",
    "test": "npm run build && mocha -r ts-node/register './src/**/*.test.[tj]s' --exit",
    "prettier": "prettier --write \"**/*.{js,ts}\"",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NRCHKB/node-red-contrib-homekit-bridged"
  },
  "keywords": [
    "homekit",
    "node-red",
    "NRCHKB",
    "iot",
    "home",
    "hap-nodejs",
    "homebridge"
  ],
  "node-red": {
    "nodes": {
      "nrchkb": "build/nodes/nrchkb.js",
      "bridge": "build/nodes/bridge.js",
      "standalone": "build/nodes/standalone.js",
      "service": "build/nodes/service.js",
      "service2": "build/nodes/service2.js",
      "status": "build/nodes/status.js"
    },
    "version": ">=1.3.7"
  },
  "author": {
    "name": "Tadeusz Wyrzykowski",
    "email": "shaquu@icloud.com",
    "url": "https://github.com/Shaquu"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/NRCHKB/node-red-contrib-homekit-bridged/issues"
  },
  "homepage": "https://github.com/NRCHKB/node-red-contrib-homekit-bridged#readme",
  "dependencies": {
    "@nrchkb/logger": "^1.3.3",
    "hap-nodejs": "0.10.0",
    "node-persist": "^3.1.0",
    "semver": "^7.3.7",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@homebridge/ciao": "^1.1.3",
    "@node-red/registry": "^1.3.7",
    "@types/mocha": "^9.1.0",
    "@types/node": "^10.17.60",
    "@types/node-persist": "^3.1.2",
    "@types/node-red": "^1.2.1",
    "@types/semver": "^7.3.9",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "mocha": "^9.2.2",
    "node-red": "1.3.7",
    "node-red-node-test-helper": "^0.2.7",
    "pinst": "^2.1.6",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">=10.22.1"
  },
  "files": [
    "/build",
    "/examples"
  ]
}
